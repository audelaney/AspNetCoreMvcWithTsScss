{
    "compilerOptions": {
        "module": "none",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES5",
        "lib": [
            "ES2015",
            "ES5",
            "DOM",
            "ES2015.Collection"
        ],
        "outDir": "wwwroot/js"
    },
    "exclude": [
        "node_modules",
        "wwwroot"
    ],
    "compileOnSave": true
}
